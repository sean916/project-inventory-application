extends layout

block content

    h1 #{title}

    form(method='POST' action='')
        div.form-group 
            label(for='name') Category:
            input#name.form-control(type='text', placeholder='Dairy, Meat, Produce etc.' name='name' value=(undefined===category ? '' : category.name))
            label(for='description') Description:
            input#description.form-control(type='text', placeholder='Short description of this cateogry', name='description' value=(undefined===category ? '' : category.description))
        button.tbn.tbn-primary(type='submit') Submit

        if errors
            ul
                for error in errors
                    li!= error.msg 